<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.qf.manager.search_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorjz"
        android:layout_height="40dp">
        <TextView
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:text="查询"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="起始时间:"
        android:textColor="@color/colorjz"
        android:id="@+id/startTime"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_height="wrap_content" />
    <DatePicker
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/datePicker1"
        android:layout_height="100dp"></DatePicker>
    <TextView
        android:layout_width="match_parent"
        android:text="结束时间："
        android:textColor="@color/colorjz"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/endTime"
        android:layout_height="wrap_content" />
    <DatePicker
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:id="@+id/datePicker2"
        android:layout_height="100dp"></DatePicker>
    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_marginTop="10dp"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="查询收入"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="0dp"
            android:id="@+id/income"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:text="查询支出"
            android:textSize="16dp"

            android:gravity="center"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="0dp"
            android:id="@+id/expend"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:text="查询总额"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/sum"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />
    </RadioGroup>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/search"
        android:text="查询"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:background="@drawable/button_f"
        android:layout_height="wrap_content" />
</LinearLayout>
